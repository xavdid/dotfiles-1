#!/usr/bin/env ruby
#
# used by the mongolab function to extract/build a string to be evaulated by mongo
#

def mongoize(uri)
  re = uri.match(/db:\/\/(\w*):(\w*)@(.*)$/)

  u = re[1]
  p = re[2]
  base = re[3]

  new_uri = "#{base} -username #{u} -password #{p}"

  puts new_uri
end

begin
  f = File.open('.env')
rescue
  exit 1
end

if ['test', 'staging'].include? ARGV[0]
  s = 'MONGOLAB_TEST_URI'
else
  s = 'MONGOLAB_URI'
end

f.each do |line|
  l = line.split('=')
  if l.first == s
    mongoize(l.last.gsub('"',''))
    break
  end
end

